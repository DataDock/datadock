@model DataDock.Web.ViewModels.DashboardViewModel
@{
    Layout = "~/Views/Shared/_DashboardBaseLayout.cshtml";
    Model.Title = Model.Title + " Dataset";
}

<div class="ui grid">
    <div class="sixteen wide column">

        <div class="ui warning message">
            <div class="header">Confirm deletion of dataset @Model.SelectedDatasetId</div>
            <p>This action removes the dataset from your GitHub repo and the record of the dataset from DataDock. <br />
            The dataset will no longer appear in search results or in your dashboard. </p>
            <p><strong>This action cannot be undone</strong><br />
            If you only want to hide the dataset from the DataDock search results, select "cancel" below and instead toggle the show/hide button on the previous page.</p>
        </div>
        <div class="ui center aligned container">
            <div class="ui buttons">
                <a href="@Url.RouteUrl("Dataset", new {ownerId=Model.SelectedOwnerId, repoId=Model.SelectedRepoId, datasetId=Model.SelectedDatasetId})" class="ui button">Cancel</a>
                <div class="or"></div>
                <a href="@Url.RouteUrl("DeleteDataset", new {ownerId=Model.SelectedOwnerId, repoId=Model.SelectedRepoId, datasetId=Model.SelectedDatasetId, confirmed=true})" class="ui primary button">Delete Dataset</a>
            </div>
        </div>
    </div>
</div>